<html>
    <head>
        <title>LUNCHIN'</title>
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css">
  
        <script src="https://cdnjs.cloudflare.com/ajax/libs/modernizr/2.8.3/modernizr.min.js" type="text/javascript"></script>
       <style type="text/css">
            body{
                background-image:url("https://data.whicdn.com/images/74576880/superthumb.jpg?t=1377496888");
            }
        </style>
  <script>
      function lol(){
          alert("keep the orders ready,Delivery boys will come soon!");
      }
  </script>
     
    </head>
    <body onload="loadthis()">
     
     <div class="row">
    <div class="col-md-8 col-md-offset-2">
        <h1> ORDERS READY TO BE DISPATCHED </h1>
        
        <% orders.forEach(function(orders){%>
        <div class="panel panel-default">
            <div class="panel-body">
                
                
                 <ul class="list-group">
                     <% orders.items.forEach(function(orderitem){%>
                  <li class="list-group-item"><%= orderitem.item.name %> | <%= orderitem.qty %>
                   <span class="badge"><%= orderitem.price %> </span></li> 
                  
                   <% }) %>
                </ul>
                
              <div class="panel-footer">
                <ul class="list-group">
                  <li class="list-group-item"><%= orders.cart.totalPrice %> 
                    
                </ul>
              </div>
              </div>
            </div>
            <% }) %>
            
            <a href="/changestatus" role="button" onclick="lol()" class="badge">DISPATCH</a>
            
    
            
         </div>
        
                          
                  
    </div>
</div>

</body>
</html>